<!-- login.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #2c3e50; /* Dark theme background color */
}

.login-container {
    background-color: #34495e; /* Dark theme container background color */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 300px; /* Set a fixed width for the container */
}

.login-box {
    text-align: center;
    color: #ecf0f1; /* Light text color on dark background */
}

.login-box h2 {
    margin-bottom: 20px;
}

.input-group {
    position: relative;
    margin-bottom: 20px;
}

.input-group i {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 10px;
    color: #bdc3c7; /* Light icon color on dark background */
}

.input-group input {
    width: calc(100% - 30px);
    padding: 10px;
    padding-left: 30px;
    border: 1px solid #bdc3c7; /* Light border color on dark background */
    border-radius: 4px;
    outline: none;
    color: #ecf0f1; /* Light text color on dark background */
    background-color: #2c3e50; /* Dark theme input background color */
}

/* Style for autofill */
.input-group input:-webkit-autofill {
    box-shadow: 0 0 0 30px #2c3e50 inset;
    -webkit-box-shadow: 0 0 0 30px #2c3e50 inset;
    -webkit-text-fill-color: #ecf0f1 !important;
}

button {
    width: 100%;
    padding: 10px;
    background-color: #3498db; /* Modern blue button color */
    color: #ecf0f1; /* Light text color on dark background */
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #2980b9; /* Darker blue color on hover */
}

p {
    color: #bdc3c7; /* Light text color on dark background */
    margin-top: 15px;
}

a {
    color: #3498db; /* Modern blue link color */
}

/* Add styles for the error message */
.error {
    color: #e74c3c; /* Red color for error messages */
    margin-top: 15px;
    font-size: 14px;
}

    </style>
</head>

<body>
  <div class="login-container">
    <div class="login-box">
        <!-- Display error message if authentication fails -->
        <% if (error) { %>
            <p class="error"><i class="fas fa-exclamation-circle"></i> <%= error %></p>
        <% } %>
      <h2><i class="fas fa-sign-in-alt"></i> Login</h2>
      <form id="loginForm" action="/login" method="post">
        <div class="input-group">
          <i class="fas fa-user"></i>
          <input type="text" name="username" placeholder="Username" required>
        </div>
        <div class="input-group">
          <i class="fas fa-lock"></i>
          <input type="password" name="password" placeholder="Password" required>
        </div>
        <button type="submit"><i class="fas fa-arrow-right"></i> Login</button>
      </form>
      
      <p>Don't have an account? <a href="/register.html"><i class="fas fa-user-plus"></i> Register here</a></p>
    </div>
  </div>
</body>

</body>

</html>
